<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:configChanges="orientation|screenSize">



    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowWeight="0.5"
        android:layout_columnSpan="4"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:hint="输入运算内容"

        android:textSize="60dip" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <Button
            android:id="@+id/clear"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"

            android:text="C"
            android:textSize="25sp" />

        <Button
            android:id="@+id/squ"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="^"
            android:textSize="25sp" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="√"
            android:textSize="25sp" />



        <Button
            android:id="@+id/del"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_weight="2"

            android:text="⬅"
            android:textSize="25sp" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Exit11"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"

            android:text="Exit"
            />

        <Button
            android:id="@+id/percent"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"

            android:text="n!"
            android:textSize="25sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="25sp" />

        <Button
            android:id="@+id/alu"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="×"
            android:textSize="25sp" />

        <Button
            android:id="@+id/sin"
            android:layout_width="70dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:text="sin"


            android:textSize="12sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="60dp"

            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="7"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="8"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="9"/>

        <Button
            android:id="@+id/sub"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="-"/>

        <Button
            android:id="@+id/cos"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="cos"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="60dp"

            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="4"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="5"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="6"/>

        <Button
            android:id="@+id/add"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="+"/>

        <Button
            android:id="@+id/tan"
            android:layout_width="70dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:text="tan"
            android:textSize="12sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="2"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="3"/>

        <Button
            android:id="@+id/dian"
            android:layout_width="70dp"
            android:layout_height="60dp"

            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="."/>

        <Button
            android:id="@+id/ln"
            android:layout_width="70dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:text="ln"
            android:textSize="12sp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:id="@+id/left9"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="("/>
        <Button
            android:id="@+id/right0"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text=")"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="0"/>

        <Button
            android:id="@+id/result"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="="/>

        <Button
            android:id="@+id/log"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="log"
            android:textSize="12sp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <Button
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="进制转换"
            android:layout_weight="1"
            android:textSize="25sp" />

        <Button
            android:id="@+id/menuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜单"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:textSize="25sp"

            />


        <Button
            android:id="@+id/more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:text="单位转换"
            android:textSize="25sp" />



    </LinearLayout>


</LinearLayout>